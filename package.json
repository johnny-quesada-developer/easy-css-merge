    "babel-loader": "^9.1.2",
    "jest": "^29.3.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.2",
    "tslib": "^2.4.1",
    "typescript": "^5.3.3",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
